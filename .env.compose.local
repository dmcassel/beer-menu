# Docker Compose Configuration for Local Development
# This file configures Docker Compose services for local development on your laptop

# PostgreSQL Container Configuration
POSTGRES_USER=beeruser
POSTGRES_PASSWORD=beerpass
POSTGRES_DB=beerdb
POSTGRES_PORT=5432

# pgAdmin Container Configuration
PGADMIN_DEFAULT_EMAIL=admin@local.dev
PGADMIN_DEFAULT_PASSWORD=adminpass
PGADMIN_PORT=8080

# Application Container Configuration
NODE_ENV=development
APP_PORT=3000

# Database URL for application (used inside containers)
DATABASE_URL=postgresql://beeruser:beerpass@postgres:5432/beerdb
