# Docker Compose Configuration for Production
# Copy this file to .env.compose.prod and fill in your production values
# DO NOT commit .env.compose.prod to version control!

# PostgreSQL Container Configuration
POSTGRES_USER=your_prod_db_user
POSTGRES_PASSWORD=your_secure_prod_password
POSTGRES_DB=beerdb_prod
# Consider using a non-standard port or not exposing externally in production
POSTGRES_PORT=5432

# pgAdmin Container Configuration
PGADMIN_DEFAULT_EMAIL=your_email@example.com
PGADMIN_DEFAULT_PASSWORD=your_secure_pgadmin_password
# Consider using a non-standard port or not exposing externally in production
PGADMIN_PORT=8080

# Application Container Configuration
NODE_ENV=production
APP_PORT=3010

# Database URL for application (used inside containers)
# Update with your production credentials
DATABASE_URL=postgresql://your_prod_db_user:your_secure_prod_password@postgres:5432/beerdb_prod
