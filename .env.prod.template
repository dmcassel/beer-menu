# Production Environment Configuration Template
# Copy this file to .env.prod and fill in your production values
# DO NOT commit .env.prod to version control!

# Database Configuration
POSTGRES_USER=your_prod_db_user
POSTGRES_PASSWORD=your_secure_prod_password
POSTGRES_DB=beerdb_prod
DATABASE_URL=postgresql://your_prod_db_user:your_secure_prod_password@postgres:5432/beerdb_prod

# PostgreSQL Port (exposed to host)
# Consider using a non-standard port or not exposing externally in production
POSTGRES_PORT=5432

# pgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=your_email@example.com
PGADMIN_DEFAULT_PASSWORD=your_secure_pgadmin_password
# Consider using a non-standard port or not exposing externally in production
PGADMIN_PORT=8080

# Application Configuration
NODE_ENV=production
APP_PORT=3010

# OAuth Configuration (if needed)
# OAUTH_CLIENT_ID=your_prod_client_id
# OAUTH_CLIENT_SECRET=your_prod_client_secret
# OAUTH_REDIRECT_URI=https://yourdomain.com/auth/callback

# AWS S3 Configuration (if needed)
# AWS_ACCESS_KEY_ID=your_prod_access_key
# AWS_SECRET_ACCESS_KEY=your_prod_secret_key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=your_prod_bucket_name

# OpenAI Configuration (if needed)
# OPENAI_API_KEY=your_prod_openai_api_key
