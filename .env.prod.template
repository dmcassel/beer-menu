# Application Runtime Configuration for Production
# Copy this file to .env.prod and fill in your production values
# This file is used by the Node.js application at runtime
# DO NOT commit .env.prod to version control!

# Database Configuration
DATABASE_URL=postgresql://your_prod_db_user:your_secure_prod_password@postgres:5432/beerdb_prod

# Application Configuration
NODE_ENV=production
PORT=3010

# OAuth Configuration
VITE_APP_ID=your_prod_app_id
JWT_SECRET=your_secure_jwt_secret
OAUTH_SERVER_URL=your_oauth_server_url
OWNER_OPEN_ID=your_owner_open_id

# Forge API Configuration (if using built-in Forge API)
BUILT_IN_FORGE_API_URL=your_forge_api_url
BUILT_IN_FORGE_API_KEY=your_forge_api_key

# AWS S3 Configuration (if needed)
# AWS_ACCESS_KEY_ID=your_prod_access_key
# AWS_SECRET_ACCESS_KEY=your_prod_secret_key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=your_prod_bucket_name

# OpenAI Configuration (if needed)
# OPENAI_API_KEY=your_prod_openai_api_key
